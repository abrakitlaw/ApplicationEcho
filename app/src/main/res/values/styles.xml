<resources>

    <!-- Base application theme. -->
    <style name="myMainTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:navigationBarColor">@color/colorAccent</item>
    </style>

    <style name="myButtonTheme" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:fontFamily">@font/pt_sans</item>
        <item name="android:baseline">100dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="myMainTheme.NoActionBar" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:navigationBarColor">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorAccent</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:titleTextColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="myMainTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar" />

    <style name="myMainTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
