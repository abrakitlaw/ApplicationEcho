<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    tools:context="com.thesis.application.echo.post_module.CommentActivity">

    <ProgressBar
        android:id="@+id/progressBarComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:layout_marginTop="300dp" />
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="@string/comments"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewComment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_margin="5dp"
        android:layout_below="@+id/textView" />

    <EditText
        android:id="@+id/editTextCommentPost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="55dp"
        android:inputType="textMultiLine"
        android:textSize="14sp"
        android:padding="25dp"
        android:background="@color/replyOrange"
        android:hint="Write a comment here.." />

    <ImageButton
        android:id="@+id/btnPostComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/editTextCommentPost"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_send_black_24dp"
        android:padding="2dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="5dp"
        android:background="@android:color/transparent"/>
</RelativeLayout>
